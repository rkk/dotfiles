#
# CUSTOM CONFIG: BSPWM
#

super + w
    bspc node -c

super + f
    bspc desktop -l next

super + g
    bspc node -s biggest.local

super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

#alt + {_,shift +} Tab
#    bspc node -f {next,prev}.local

super + Tab
    bspc window -s last


super + shift + g
    bspc node -s biggest

super + {Left,Right}
    bspc desktop -f {prev,next}

super + shift + {Left,Right}
    bspc node -d {next,prev}

super + space ; {r,R}
    bspc node @/ --rotate {90,-90}

super + space ; g
    bspc node -t ~floating

super + space ; {h,j,k,l}
    bspc node -s {west,south,north,east}

super + shift + Escape
    sh ~/.config/bspwm/bspwmrc

