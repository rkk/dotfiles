# Simple X Hotkey Daemon (sxhkd) configuration for an almost window manager
# agnostic experience. Depends on xdotool, custom scripts and is aimed at
# a specific collection of applications, see "windowactivate" parts.


# RXVT has issues reading URxvt.perl-ext path from ~/.Xdefaults, so enforce it here.
super + Return
    rxvt-unicode -pe plumb

super + shift +Return
    rxvt-unicode -pe plumb -fg white -bg black -cr gray

control + space
    dmenu_run \
    	-nb '#ffffea' \
    	-nf '#000000' \
    	-sb '#eaffff' \
    	-sf '#121212' \
    	-fn 'GoRegular' \
    	-l 10 \
    	-f \
    	-i

# Programming Oriented Keyboard Environment (POKE) - applications.
control + shift + t
    xdotool search --name rxvt windowactivate

control + shift + z
    xdotool search  --classname Zathura windowactivate

control + shift + b
    xdotool search --name qutebrowser windowactivate

control + shift + g
    xdotool search --name "outlook" windowactivate

control + shift + c
	xdotool search --classname acme windowactivate

control + shift + f
    winfocus Chromium

control + shift + h
    winfocus Slack

control + shift + m
	winfocus Firefox

super + F1
    amixer set Master toggle

super + F2
    amixer set Master '5%-'

super + F3
    amixer set Master '5%+'

super + F8
    brightnessctl set 10%-

super + F9
    brightnessctl set +10%

super + q
    xdotool getactivewindow windowkill

super + Escape
    pkill -USR1 -x sxhkd

#super + Prior
#    xdotool click 4

#super + Next
#    xdotool click 5

control + shift + d
    xdotool click 2

control + shift + r
	xdotool click 3

super + d
    xdotool click 2

super + r
    xdotool click 3

super + c
	xdotool click 1

super + Tab
    rofi -show window

alt + Tab
    i3-msg workspace back_and_forth


#
# CUSTOM CONFIG: i3
#

super + shift + Escape
    i3-msg reload

super + v
	i3-msg "split v"

super + shift + v
	i3-msg "split h"

super + f
	i3-msg "fullscreen"

@F11
	i3-msg "fullscreen"

super + e
	i3-msg "layout toggle split"

super + h
	i3-msg "focus left"

super + j
	i3-msg "focus down"

super + k
	i3-msg "focus up"

super + l
	i3-msg "focus right"

# Mimic swap biggest window functionality from bspwm.
super + g
	mainwinswap.py

super + shift + h
	i3-msg "move left"

super + shift + j
	i3-msg "move down"

super + shift + k
	i3-msg "move up"

super + shift + l
	i3-msg "move right"

super + space
	rofi -show window

super + shift + space
	i3-msg "floating toggle"

super + z
	i3-msg "move scratchpad"

super + shift + z
	i3-msg "scratchpad show"



