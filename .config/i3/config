# i3 window manager configuration.
# Vocabulary:
#
# i3 term  : General term
# ---------:------------
# Workspace: Desktop
# Output   : Monitor
# Container: Window
# Mod1     : Alt key
# Mod4     : Windows/Apple key


#
# APPEARANCE
#

font                  xft:GoRegular 8
set_from_resource $rio_unfocused  i3wm.rioUnfocused   #000000
set_from_resource $rio_focused    i3wm.rioFocused     #000000
set_from_resource $rio_background i3wm.rioBackground  #000000

# Property                Border          Background       Text           Indicator      Child border
client.focused            $rio_focused    $rio_focused     $rio_focused   $rio_focused   $rio_focused
client.focused_inactive   $rio_background $rio_background  $rio_background $rio_background $rio_background
client.unfocused          $rio_background $rio_background  $rio_background $rio_background $rio_background


#
# GAPS
#

# Previous values: 12
# gaps inner 15

# Previous values -2
# gaps outer -2

# Previous values: 0
# gaps bottom 0

# Previous values: 10
# gaps top 0
# smart_gaps on

# for_window [class="^.*"] border pixel 4
new_window	          pixel 0

for_window [class="^.*"] border pixel 4
new_window	          pixel 4


#
# BEHAVIOR
#

# Read from ~/.Xdefaults, default to built-in monitor.
set_from_resource $monitorPrimary   i3wm.monitorPrimary eDP-1
set_from_resource $monitorSecondary i3wm.monitorSecondary eDP-1
set_from_resource $workspace1       i3wm.workspace1 1
set_from_resource $workspace2       i3wm.workspace2 2
set_from_resource $workspace3       i3wm.workspace3 3
set_from_resource $workspace4       i3wm.workspace4 4


set $first            workspace $workspace1
set $second           workspace $workspace2
set $third            workspace $workspace3
set $fourth           workspace $workspace4

for_window [window_role="pop-up"]          floating enable
for_window [window_role="task_dialog"]     floating enable
for_window [class="Teams"] floating disable
for_window [class="Chromium"] floating disable

for_window [class="spotify"] move to $fourth
for_window [class="Spotify"] move to $fourth


#
# KEYS
#

set $mod Mod4
set $alt_mod Mod1
floating_modifier $mod

bindsym $mod+1 $first
bindsym $mod+2 $second
bindsym $mod+3 $third
bindsym $mod+4 $fourth
bindsym $mod+Shift+1 move container to $first
bindsym $mod+Shift+2 move container to $second
bindsym $mod+Shift+3 move container to $third
bindsym $mod+Shift+4 move container to $fourth

# Mark a window with a tag ($mod+m) and navigate to given tag ($mod+r).
bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+r exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '


#
# EXEC
#

exec_always --no-startup-id $HOME/bin/wm-start-polybar.sh
exec_always --no-startup-id /usr/bin/xrdb $HOME/.Xdefaults
exec_always --no-startup-id setdvorarkk
exec_always --no-startup-id setmouse
exec --no-startup-id /usr/bin/sxhkd -c $HOME/.config/sxhkd/i3.sxhkdrc &
exec --no-startup-id /usr/bin/autocutsel -s PRIMARY -f
exec --no-startup-id /usr/bin/unclutter &
exec --no-startup-id xsetroot -solid "$rio_background"
exec --no-startup-id xautolock -locker $HOME/bin/afk
exec --no-startup-id redshift -c $HOME/.config/redshift/redshift.conf &
exec_always --no-startup-id $HOME/bin/keyboardwarrior.sh &
exec_always --no-startup-id $HOME/.config/i3/alternatelayout.py &

