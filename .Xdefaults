#define RIOFOCUSED      #9eefef
#define RIOUNFOCUSED    #55aaaa
#define RIOBACKGROUND   #757575
#define RIOTEXTBACKGROUND   #ffffea
#define RIOTEXTFOREGROUND   #000000

#define MONOFONT        xft:Go Mono:size=10
#define VARFONT         xft:Go Regular:size=10
#define FONTSIZE        10
#define BOLDCOLORS      false
#define SHOWSCROLLBARS  false
#define BORDERINTERNAL  8

*background:            RIOTEXTBACKGROUND
*foreground:            RIOTEXTFOREGROUND
*fadeColor:             RIOTEXTBACKGROUND
*cursorColor:           GREEN
*pointerColorBackground: GREEN
*pointerColorForeground: WHITE
*rioFocused:            RIOFOCUSED
*rioUnfocused:          RIOUNFOCUSED
*rioBackground:         RIOBACKGROUND

*color0:                DARK
*color8:                DARKLIGHT
*color1:                RED
*color9:                REDLIGHT
*color2:                GREEN
*color10:               GREENLIGHT
*color3:                YELLOW
*color11:               YELLOWLIGHT
*color4:                BLUE
*color12:               BLUELIGHT
*color5:                MAGENTA
*color13:               MAGENTALIGHT
*color6:                CYAN
*color14:               CYANLIGHT
*color7:                WHITE
*color15:               WHITELIGHT

*faceName:              VARFONT
*faceSize:              FONTSIZE

XTerm*boldColors: BOLDCOLORS
XTerm*locale: true
XTerm*selectToClipboard: true
XTerm*scrollBar: SHOWSCROLLBARS
XTerm*font: MONOFONT
XTerm*internalBorder: BORDERINTERNAL


URxvt.scrollBar: SHOWSCROLLBARS
URxvt.tintColor: DARK
URxvt*shading: 20
URxvt*fading: 0
URxvt.boldColors: BOLDCOLORS
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.font: MONOFONT
URxvt.boldFont: MONOFONT
URxvt.italicFont: MONOFONT
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt*internalBorder: BORDERINTERNAL

URxvt*perl-lib: /home/rkk/lib/urxvt
!URxvt.perl-ext: matcher,plumb,keyboard-select
URxvt.perl-ext: plumb,font-size
!URxvt.perl-ext-common: selection-to-clipboard
!URxvt.url-launcher: /usr/bin/xdg-open
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

Xft*antialias: true
Xft*dpi: 96
*monitorPrimary: DP-2-2
*monitorSecondary: DP-2-3
*workspace1: 1
*workspace2: 2
*workspace3: 3
*workspace4: 4


