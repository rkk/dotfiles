#define DARK            #002831
#define DARKLIGHT       #001e27
#define RED             #d11c24
#define REDLIGHT        #bd3613
#define GREEN           #738a05
#define GREENLIGHT      #475b62
#define YELLOW          #a57706
#define YELLOWLIGHT     #536870
#define BLUE            #2176c7
#define BLUELIGHT       #708284
#define MAGENTA         #c61c6f
#define MAGENTALIGHT    #5956ba
#define CYAN            #259286
#define CYANLIGHT       #819090
#define WHITE           #eae3cb
