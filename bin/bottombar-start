#!/bin/bash
# Starts a Lemonbar instance at the bottom of the screen, with
# the contents output by the bottombar-text script.

font="-adobe-helvetica-medium-r-*-*-18-*-*-*-*-*-*-*"
height="20"
margin="10"

dark_gray="#aaaaaa"
acme_yellow="#ffffea"
acme_magenta="#eaffff"
black="#000000"
white="#ffffff"

bottombar-text | lemonbar -b -n "lemonbar" -f "${font}" -g x${height} -d -B "${dark_gray}" -F "${acme_magenta}" -U "${acme_magenta}" -p