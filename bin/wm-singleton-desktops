#!/bin/bash
#
# Ensures only one desktop is available.

wm-is-i3 && echo "ERROR Window manager not supported" && exit 1
limit=1
desktops="$(bspc query -D)"
num_desktops="$(echo "${desktops}" | wc -l)"

if [ "${num_desktops}" -eq 1 ]; then
    exit 0
fi

delta=$((num_desktops - limit))
while [ $delta -gt 0 ]; do
    bspc desktop -r
    delta=$((delta-1))
done

